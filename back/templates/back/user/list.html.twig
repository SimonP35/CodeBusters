{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}

<div class="container mb-auto">
	<div class="row d-flex">
		<div class="col-11"><h1>Liste des Utilisateurs</h1></div>
		<div class="col-1 d-flex align-items-center"><a href="{{ path('back_user_create') }}" class="btn btn-success">Ajouter</a></div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nickname</th>
                <th>Roles</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.nickname }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <form action="{{ path('back_user_update', {id: user.id}) }}" method="get">
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <button type="submit" class="btn btn-success edit"><i class="far fa-edit"></i></i></button>
                        </div>
                    </td>
                </form>
                <form action="{{ path('back_user_delete', {id: user.id}) }}" method="post">
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <button type="submit" class="btn btn-danger delete"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </td>
                </form>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun utilisateur trouv√© :'(</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
