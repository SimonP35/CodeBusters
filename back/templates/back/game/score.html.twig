{% extends 'base.html.twig' %}

{% block title %}High Scores{% endblock %}

{% block body %}

<div class="container mb-auto">
	<div class="row d-flex">
		<div class="col-11"><h1>Tableau des high scores</h1></div>
    </div>
    <table class="table table-hover table-dark table-striped">
        <thead>
            <tr>
                <th>user</th>
                <th>score</th>
                <th>date</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.nickname }}</td>
                <td>{{ game.score }}</td>
                <td>{{ game.ended_at|date("m/d/Y") }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun partie trouv√©e :'(</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
