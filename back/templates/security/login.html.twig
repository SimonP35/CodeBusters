{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container col-4 justify-content-center">
<form class="mt-5" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter :)</h1>
    <label class="mt-3 mb-3" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label class="mt-3 mb-3" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="col-8 container ">
        <div class="row text-center mb-3">
                    <button class="btn btn-lg btn-primary mt-4" type="submit">
                        Connexion
                    </button>
                </form>
                {# <form action="{{ path('app_forgot_password_request') }}">
                    <button class="mt-3 btn btn-lg btn-danger" type="submit">
                        Vous avez oublié votre mot de passe ?
                    </button>
                </form> #}
                <a class="mt-3" href="http://localhost:8000/reset-password">Mot de passe oublié ?</a>
        </div>
    </div>
</div>
{% endblock %}
